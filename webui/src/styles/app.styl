body, html
  padding 10px 20px
  margin 0
  width 100%
  height 100%
  font-family: 'Roboto Condensed', sans-serif;

*, *:before, *:after
  box-sizing border-box

.ui.tiny.button
  padding-top 10px !important
  padding-bottom 10px !important

.faded
  opacity 0.5

.faded:hover
  opacity 0.85

