body, html
  padding 0
  margin 0
  width 100%
  height 100%
  font-family Courier
  overflow hidden

*, *:before, *:after
  box-sizing border-box

.input
  border-bottom thin solid black

.input, .output
  height: 50%
  textarea
    font-family Courier
    height 100%
    width 100%
    padding 10px
    border none

.controls
  position: fixed
  bottom: 0
  left: 0